{
  "name": "tracespace",
  "private": true,
  "workspaces": [
    "apps/*",
    "config",
    "packages/*"
  ],
  "scripts": {
    "test": "cross-env INTEGRATION=1 nyc mocha",
    "test:watch": "mocha --watch --reporter dot",
    "coverage": "nyc report --reporter=lcov",
    "start": "lerna run start --parallel",
    "prebuild": "yarn clean",
    "build": "yarn build:packages && lerna run build --parallel",
    "build:packages": "rollup -c config/rollup.config.js",
    "build:bundles": "yarn build:packages --configBundle",
    "postbuild": "yarn types",
    "watch": "concurrently \"lerna run watch --parallel\" \"yarn build:packages --watch\" \"yarn types --watch\"",
    "serve": "lerna run serve --parallel",
    "clean": "lerna run clean --parallel",
    "postclean": "yarn clean:types",
    "build:all": "yarn build && yarn build:bundles && yarn example && yarn docs",
    "lint": "eslint '.*.js' '**/*.@(js|ts|tsx)'",
    "format": "prettier --ignore-path .eslintignore --write '.*.@(js|yml)' '**/*.@(js|ts|tsx|json|md|yml)'",
    "types": "tsc --build",
    "clean:types": "tsc --build --clean",
    "docs": "lerna run docs",
    "example": "lerna run example",
    "prebump": "yarn test",
    "bump": "lerna version",
    "precoverage:upload": "yarn coverage",
    "coverage:upload": "codecov",
    "publish:npm": "lerna publish from-git --yes --npm-tag $NPM_TAG",
    "publish:s3": "node ./scripts/publish-to-s3 apps/www/dist: apps/view/dist:view"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "engines": {
    "node": ">=8",
    "yarn": ">=1"
  },
  "nyc": {
    "all": true,
    "include": [
      "apps/**",
      "packages/**"
    ],
    "exclude": [
      "**/node_modules/**",
      "**/example/**",
      "**/scripts/**",
      "**/dist/**",
      "**/integration/**",
      "**/test.js",
      "**/test/**",
      "**/__tests__/**",
      "**/*.config.js",
      "config/**",
      "packages/fixtures/**"
    ],
    "extension": [
      ".js",
      ".ts",
      ".tsx"
    ]
  },
  "devDependencies": {
    "@babel/cli": "^7.8.0",
    "@babel/core": "^7.8.0",
    "@babel/plugin-proposal-class-properties": "^7.8.0",
    "@babel/plugin-proposal-object-rest-spread": "^7.8.0",
    "@babel/plugin-syntax-dynamic-import": "^7.8.0",
    "@babel/plugin-transform-modules-commonjs": "^7.8.0",
    "@babel/preset-env": "^7.8.0",
    "@babel/preset-react": "^7.8.0",
    "@babel/preset-typescript": "^7.8.0",
    "@babel/register": "^7.8.0",
    "@rollup/plugin-node-resolve": "^7.0.0",
    "@types/chai": "^4.2.7",
    "@types/chai-as-promised": "^7.1.2",
    "@types/enzyme": "^3.10.4",
    "@types/mocha": "^5.2.7",
    "@types/node": "^13.1.6",
    "@types/react": "^16.9.17",
    "@typescript-eslint/eslint-plugin": "^2.15.0",
    "@typescript-eslint/parser": "^2.15.0",
    "aws-sdk": "^2.601.0",
    "babel-loader": "^8.0.6",
    "babel-plugin-module-resolver": "^4.0.0",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "codecov": "^3.6.1",
    "concat-stream": "^2.0.0",
    "cross-env": "^6.0.3",
    "css-loader": "^3.4.2",
    "cz-conventional-changelog": "^2.1.0",
    "debug": "^4.1.1",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.2",
    "enzyme-to-json": "^3.4.3",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.9.0",
    "eslint-config-standard": "^14.1.0",
    "eslint-plugin-import": "^2.20.0",
    "eslint-plugin-node": "^11.0.0",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-react": "^7.17.0",
    "eslint-plugin-react-hooks": "^2.3.0",
    "eslint-plugin-standard": "^4.0.1",
    "express": "^4.17.1",
    "file-loader": "^4.3.0",
    "filemanager-webpack-plugin": "^2.0.5",
    "globby": "^10.0.2",
    "html-webpack-plugin": "^3.2.0",
    "lerna": "^3.20.2",
    "lodash": "^4.17.15",
    "mime": "^2.4.4",
    "mini-css-extract-plugin": "^0.9.0",
    "mocha": "^7.0.0",
    "nyc": "^15.0.0",
    "optimize-css-assets-webpack-plugin": "^5.0.3",
    "portfinder": "^1.0.25",
    "prettier": "^1.19.1",
    "proxyquire": "^2.1.3",
    "pump": "^3.0.0",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "rimraf": "^3.0.0",
    "rollup": "^1.29.0",
    "rollup-plugin-babel": "^4.3.3",
    "rollup-plugin-terser": "^5.2.0",
    "run-parallel": "^1.1.9",
    "run-waterfall": "^1.1.6",
    "semver": "^6.3.0",
    "sinon": "^8.0.4",
    "sinon-chai": "^3.4.0",
    "snap-shot-it": "^7.9.1",
    "source-map-loader": "^0.2.4",
    "style-loader": "^1.1.2",
    "terser-webpack-plugin": "^2.3.2",
    "testdouble": "^3.12.5",
    "to-readable-stream": "^2.1.0",
    "typescript": "^3.7.4",
    "webpack": "^4.41.5",
    "webpack-bundle-analyzer": "^3.6.0",
    "webpack-cli": "^3.3.10",
    "webpack-dev-server": "^3.10.1",
    "webpack-merge": "^4.2.2",
    "worker-loader": "^2.0.0"
  }
}
