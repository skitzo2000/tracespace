{
  "name": "tracespace",
  "private": true,
  "workspaces": [
    "apps/*",
    "config",
    "packages/*"
  ],
  "scripts": {
    "test": "cross-env INTEGRATION=1 nyc mocha",
    "test:watch": "mocha --watch --reporter dot",
    "coverage": "nyc report --reporter=lcov",
    "start": "lerna run start --parallel",
    "prebuild": "npm run clean",
    "build": "lerna run build --parallel",
    "postbuild": "npm run build:types",
    "serve": "lerna run serve --parallel",
    "clean": "lerna run clean --parallel",
    "build:types": "tsc --build",
    "build:all": "yarn build && yarn example && yarn docs",
    "lint": "eslint \".*.js\" \"**/*.@(js|ts|tsx)\"",
    "format": "prettier --ignore-path .eslintignore --write \".*.@(js|yml)\" \"**/*.@(js|ts|tsx|json|md|yml)\"",
    "check": "tsc --noEmit",
    "docs": "lerna run docs",
    "example": "lerna run example",
    "prebump": "yarn test",
    "bump": "lerna version",
    "precoverage:upload": "yarn coverage",
    "coverage:upload": "codecov",
    "publish:npm": "lerna publish from-git --yes --npm-tag $NPM_TAG",
    "publish:s3": "node ./scripts/publish-to-s3 apps/www/dist: apps/view/dist:view"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "engines": {
    "node": ">=8",
    "yarn": ">=1"
  },
  "nyc": {
    "all": true,
    "include": [
      "apps/**",
      "packages/**"
    ],
    "exclude": [
      "**/node_modules/**",
      "**/example/**",
      "**/scripts/**",
      "**/dist/**",
      "**/integration/**",
      "**/test.js",
      "**/test/**",
      "**/__tests__/**",
      "**/*.config.js",
      "config/**",
      "packages/fixtures/**"
    ],
    "extension": [
      ".js",
      ".ts",
      ".tsx"
    ]
  },
  "devDependencies": {
    "@babel/cli": "^7.6.2",
    "@babel/core": "^7.6.2",
    "@babel/plugin-proposal-class-properties": "^7.5.5",
    "@babel/plugin-proposal-object-rest-spread": "^7.6.2",
    "@babel/plugin-syntax-dynamic-import": "^7.2.0",
    "@babel/plugin-transform-modules-commonjs": "^7.6.0",
    "@babel/preset-env": "^7.6.2",
    "@babel/preset-react": "^7.0.0",
    "@babel/preset-typescript": "^7.6.0",
    "@babel/register": "^7.6.2",
    "@tracespace/config": "^4.1.0",
    "@types/chai": "^4.2.3",
    "@types/chai-as-promised": "^7.1.2",
    "@types/enzyme": "^3.10.3",
    "@types/mocha": "^5.2.7",
    "@types/node": "^12.7.11",
    "@types/react": "^16.9.5",
    "@typescript-eslint/eslint-plugin": "^2.3.2",
    "@typescript-eslint/parser": "^2.3.2",
    "aws-sdk": "^2.543.0",
    "babel-loader": "^8.0.6",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "codecov": "^3.6.1",
    "concat-stream": "^2.0.0",
    "core-js": "^3.0.0",
    "cross-env": "^6.0.3",
    "css-loader": "^3.2.0",
    "cz-conventional-changelog": "2.1.0",
    "debug": "^4.1.1",
    "enzyme": "^3.10.0",
    "enzyme-adapter-react-16": "^1.14.0",
    "enzyme-to-json": "^3.4.2",
    "eslint": "^6.5.1",
    "eslint-config-prettier": "^6.4.0",
    "eslint-config-standard": "^14.1.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-node": "^10.0.0",
    "eslint-plugin-prettier": "^3.1.1",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-react": "^7.16.0",
    "eslint-plugin-react-hooks": "^2.1.2",
    "eslint-plugin-standard": "^4.0.1",
    "express": "^4.17.1",
    "file-loader": "^4.2.0",
    "filemanager-webpack-plugin": "^2.0.5",
    "globby": "^10.0.1",
    "html-webpack-plugin": "^3.2.0",
    "lerna": "^3.16.4",
    "lodash": "^4.17.15",
    "mime": "^2.4.4",
    "mini-css-extract-plugin": "^0.8.0",
    "mocha": "^6.2.1",
    "null-loader": "^3.0.0",
    "nyc": "^14.1.1",
    "optimize-css-assets-webpack-plugin": "^5.0.3",
    "portfinder": "^1.0.24",
    "prettier": "^1.18.2",
    "proxyquire": "^2.1.3",
    "pump": "^3.0.0",
    "react": "^16.10.2",
    "react-dom": "^16.10.2",
    "run-parallel": "^1.1.9",
    "run-waterfall": "^1.1.6",
    "semver": "^6.3.0",
    "sinon": "^7.5.0",
    "sinon-chai": "^3.3.0",
    "snap-shot-it": "^7.8.0",
    "source-map-loader": "^0.2.4",
    "style-loader": "^1.0.0",
    "terser-webpack-plugin": "^2.1.2",
    "testdouble": "^3.12.4",
    "to-readable-stream": "^2.1.0",
    "typescript": "^3.6.3",
    "unist-builder": "^1.0.3",
    "unist-util-select": "^2.0.0",
    "webpack": "^4.41.0",
    "webpack-bundle-analyzer": "^3.5.2",
    "webpack-cli": "^3.3.9",
    "webpack-dev-server": "^3.8.2",
    "webpack-merge": "^4.2.2",
    "worker-loader": "^2.0.0"
  }
}
