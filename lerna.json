{
  "version": "4.1.1",
  "npmClient": "yarn",
  "useWorkspaces": true,
  "command": {
    "version": {
      "conventionalCommits": true,
      "message": "chore(release): %s",
      "preid": "next",
      "push": false
    },
    "publish": {
      "npmClient": "npm"
    }
  },
  "ignoreChanges": [
    "**/*.md",
    "**/*test.js",
    "**/__tests__/**",
    "**/integration/**/*.js",
    "**/example/**/*.js",
    "**/scripts/**/*.js"
  ]
}
